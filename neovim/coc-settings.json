{
    "diagnostic.refreshOnInsertMode": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c", "cpp"
            ],
            "rootPatterns": [
                ".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                }
            }
        }
    }
}

